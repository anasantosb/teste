/* Estilo para os links no modo escuro */
nav.dark-mode ul li a {
    color: #e5e5e5; /* Texto branco */
}

/* Estilo para o hover dos links no modo escuro */
nav.dark-mode ul li a:hover {
    background-color: #e5e5e5;
    color: #14213d;
}

/* Restante do seu CSS... */


/* Estilo para o light mode */
.light-mode {
    background-color: #e5e5e5;
    color: #14213d;
}

/* Estilo para o dark mode */
.dark-mode {
    background-color: #14213d;
    color: #e5e5e5;
}

.loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.loader-icon {
    border: 5px solid #f3f3f3;
    border-top: 5px solid #3498db;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 2s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
/* Estilo para o switch */
.switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
}

/* Ocultar o checkbox padrão */
.switch input {
    display: none;
}

/* Estilo para o slider do switch */
.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .4s;
    border-radius: 34px;
}

/* Estilo para o botão do switch (círculo) */
.slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: .4s;
    border-radius: 50%;
}

/* Estilo para o switch quando estiver marcado */
input:checked + .slider {
    background-color: #2196F3;
}

/* Estilo para o botão do switch quando estiver marcado */
input:checked + .slider:before {
    transform: translateX(26px);
}

.container-slide{
    display: flex;
    justify-content: space-between;
    width: 50vw;
    height: 60vh;
    background-color: black;
    margin: 5vh auto;
    border-radius: 10px;
    box-shadow: 0 20px 30px black;
    border: 5px solid black;
}

.container-items {
    position: absolute;
    display: flex;
    width: 50vw;
    height: 60vh;
    border-radius: 10px;
    overflow: hidden;
}

.item {
    width: 50vw;
    height: 50vh;
    transition: all 1s;
}
.item:first-child{
    margin-left: -100%;
}

.item img {
    width: 50vw;
    height: 60vh;
    border-radius: 10px;
}

.action-button{
    font: bold 30px sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50px;
    color: #00000000;
    user-select: none;
    z-index: 1;
}
.action-button:hover{
    color: white;
    background-color: #00000055;
    border-radius: 10px;
    cursor: pointer;
    transition: all 1s;
}

/* style.css */
.blur-background::before {
    content: "";
    background: url('background.jpg') center/cover no-repeat;
    filter: blur(5px); /* Ajuste o valor conforme necessário */
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}
